<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="20dp"
     >

    <TextView
        android:id="@+id/tvAdminName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#000000"
        android:layout_marginTop="18dp"
        android:text="Name" />

    <TextView
        android:id="@+id/tvAdminDesignation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/tvAdminName"
        android:layout_below="@+id/tvAdminName"
        android:text="Designation"
        />

    <TextView
        android:id="@+id/tvAdminJobPostion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignBaseline="@+id/tvAdminDesignation"
        android:layout_alignBottom="@+id/tvAdminDesignation"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42dp"
        android:text="Job position"
         />

</RelativeLayout>
